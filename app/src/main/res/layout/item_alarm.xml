<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/medium"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagen"
                    android:layout_centerHorizontal="true"
                    android:background="#444444" />

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_alarm"
                    android:layout_margin="10dp"
                    />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemBody"
                    android:padding="@dimen/small"
                    tools:text="Nombre"
                    android:layout_toRightOf="@id/profile"
                    android:layout_alignTop="@id/profile"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small"
                    tools:text="(Día/Mes/Año)"
                    android:layout_below="@id/nombre"
                    android:layout_toRightOf="@id/profile"
                    android:textColor="@color/itemBody"
                    />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:id="@+id/tipart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemBody"
                    android:padding="@dimen/small"
                    android:layout_marginLeft="@dimen/small"
                    android:text="Parto:"
                    android:layout_toRightOf="@id/nombre"
                    android:layout_alignTop="@id/nombre"
                    />

                <TextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:id="@+id/parto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemBody"
                    android:padding="10dp"
                    tools:text="(Hora:Min)"
                    android:layout_alignLeft="@id/tipart"
                    android:layout_below="@id/nombre"
                    />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</RelativeLayout>